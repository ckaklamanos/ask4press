<?xml version='1.0' encoding='utf-8'?>
<widget id="gr.yesinternet.ask4press" version="1.3.1" versionCode="223" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>ask4press</name>
    <description>ask4press mobile application</description>
    <author email="info@yesinternet.gr" href="http://www.yesinternet.gr">YES Internet</author>
	
	<!-- <gap:platform name="ios" /> -->
	<gap:platform name="android" />

	<!--multiplatform-->
	<preference name="phonegap-version" value="3.6.3" />
    <preference name="orientation" value="portrait" />
    <!--<preference name="fullscreen" value="true" />-->
	
	
	<!--android-->
	<preference name="android-minSdkVersion" value="8" />
	<!-- preference name="android-maxSdkVersion" value="7" />-->
	<!-- <preference name="android-targetSdkVersion" value="7" />-->
	<preference name="android-installLocation" value="internalOnly" />
	<!-- <preference name="android-windowSoftInputMode" value="stateVisible|adjustResize" /> -->
    <!-- <preference name="load-url-timeout" value="60000" /> Removed this, I thought it was applicable--> 
	<preference name="SplashScreenDelay" value="60000" />
	<preference name="permissions" value="none"/>
	
	<!--ios-->
	<preference name="webviewbounce" value="false" />
	<preference name="target-device" value="universal" />
    <preference name="prerendered-icon" value="true" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="false" />
    <preference name="exit-on-suspend" value="false" />
	
	<preference name="StatusBarOverlaysWebView" value="false" />
	<preference name="StatusBarBackgroundColor" value="#ffffff" />
    
	<icon src="icon.png" width="144"	height="144" />

    
	<!--android icon-->
	<icon gap:platform="android" gap:qualifier="ldpi"		src="res/android/icon/ldpi.png"			/><!--120dpi-->
    <icon gap:platform="android" gap:qualifier="mdpi" 		src="res/android/icon/mdpi.png" 	  /><!--160dpi-->
    <icon gap:platform="android" gap:qualifier="hdpi" 		src="res/android/icon/hdpi.png" 	  /><!--240dpi-->
    <icon gap:platform="android" gap:qualifier="xhdpi"		src="res/android/icon/xhdpi.png"	 /><!--320dpi-->
    <icon gap:platform="android" gap:qualifier="xxhdpi"		src="res/android/icon/xxhdpi.png"	 /><!--480dpi-->
    
	<!--Splash-->
	<!--default-->
	<gap:splash src="splash.png" />
	<!--android-->
	<gap:splash gap:platform="android" gap:qualifier="ldpi" 	src="res/android/splash/portrait/ldpi.png"/><!--120dpi-->
	<gap:splash gap:platform="android" gap:qualifier="mdpi" 	src="res/android/splash/portrait/mdpi.png"/><!--160dpi-->
	<gap:splash gap:platform="android" gap:qualifier="hdpi" 	src="res/android/splash/portrait/hdpi.png"/><!--240dpi-->
	<gap:splash gap:platform="android" gap:qualifier="xhdpi" 	src="res/android/splash/portrait/xhdpi.png"/><!--320dpi-->
	<gap:splash gap:platform="android" gap:qualifier="xxhdpi" 	src="res/android/splash/portrait/xxhdpi.png"/><!--480dpi-->

	<access origin="*.watermark.gr"/> 
	<access origin="*.pushwoosh.com"/>
	<access origin="*.googleapis.com"/> 

	<gap:plugin name="com.pushwoosh.plugins.pushwoosh" version="3.0.2" />
	<gap:plugin name="nl.x-services.plugins.socialsharing" version="4.3.6" />
	<gap:plugin name="org.apache.cordova.device" version="0.2.12" />
	<gap:plugin name="org.apache.cordova.dialogs" version="0.2.10" />
	<gap:plugin name="org.apache.cordova.inappbrowser" version="0.5.2" />
	<gap:plugin name="org.apache.cordova.network-information" version="0.2.12" />
	<gap:plugin name="org.apache.cordova.splashscreen" version="0.3.3" />
	<gap:plugin name="org.apache.cordova.statusbar" version="0.1.4" />
	<gap:plugin name="org.apache.cordova.contacts" version="0.2.13" />

   <content src="index.html" />
		
</widget>

